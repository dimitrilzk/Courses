@model List<CourseViewModel>
@{
    Layout = "_Layout";
}
@*ul>li*3>lorem*@

<h1>Catalogo dei corsi</h1>

@foreach(CourseViewModel course in Model)
{
<div class="row">
    <div class="col-md-1">
        <img src="@course.ImagePath" alt="logo" width="50" />
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author</author>
    </div>
        <div class="col-md-2" title="@course.Rating">
            @for(int i = 1; i <= 5; i++)
            {
                if(course.Rating >= i)
                {
                    <i class="fa-solid fa-star"></i>
                }
                else if(course.Rating > i - 1)
                {
                    <i class="fa-solid fa-star-half"></i>
                }
                else
                {
                    <i class="fa-regular fa-star"></i>
                }
            }           
    </div>
    <div class="col-md-2">
            @course.CurrentPrice 
            @if (!course.CurrentPrice.Equals(course.FullPrice))
            {
                <br /> <s>@course.FullPrice</s>
            }  
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>
    </div>
</div>
}

